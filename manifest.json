{
  "manifest_version": 2,
  "name": "Take a break",
  "version": "1.01",

  "description": "Take a short refreshing break from your screen - we're timing you!",
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },

  "browser_action": {
      "default_icon": {
        "16": "images/icon16.png"
      },
      "default_title": "Take a break",
      "default_popup":"popup.html"
  },

  "background": {
    "scripts":[
      "js/background.js",
      "js/controller/timer.js",
      "js/controller/errorHandler.js"
    ]
  }
}
